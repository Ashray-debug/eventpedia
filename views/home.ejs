<section class="section about">
	<div class="container">
		<div class="row  justify-content-center mb-5">
			<div class="col-lg-8 text-center">
				<span class="text-primary font-extra font-md">About Event</span>
				<h2 class="mt-3 mb-4">Upcoming Hackathons/Events In Your College. </h2>
			</div>
		</div>
		<div class="row">
            <% if(allHecks != undefined){ %> 
            <% var i = 0 ; %>
            <% allHecks = allHecks.reverse() %>
                <% allHecks.forEach((heck)=>{ %>
                <% if(i < 3){ %>
                 <div class="col-lg-4 col-md-4 mb-5 mb-lg-0" data-aos="fade-up" data-aos-delay="<%-i*300%>">
                        <% if(heck.heckPoster != undefined){%>
                            <% var posterUrl = heck.heckPoster %>
                            <% posterUrl = posterUrl.slice(6,posterUrl.length) %>	
                        <%}else{ %> 
                            <% var posterUrl = null %>	
                        <%} %>
                        <a></a>
                        <div style="background-color : blue;color : white;width : 40px;height : 30px;position : relative;bottom - 10px"> $<%=heck.entryFees%> </div>
                        <img src="./<%=posterUrl%>" alt="" class="img-fluid" style="margin-top : -30px" >
                        <div class="mt-3">
                            <h3><%=heck.eventName%> by <%= heck.ownerName %> </h3>
                            <p> Posted On : <%= heck.createdOn.toString().slice(0,15) %> <br> 
                                Event On : <%= heck.onDate.toString().slice(0,15) %> <br>
                                Place :<%= heck.place %>
                            </p>
                            <p>
                                <a  href="showHeck/<%=heck.id%>" target="_blank" class="btn btn-outline-danger">More Details</a>
                            </p>

                        </div>
                </div>  
                <%} %>
                <% i=i+1 %>
                <% }) %>
            <% } %>
		</div>
	</div>
</section>
<!-- About  End -->

<!-- CTA start -->
<section class="section cta">
	<div class="overlay"></div>
	<div class="container">
		<div class="row justify-content-center">
			<div class="col-lg-8 text-center">
                <form action="/createUser" method="POST" id="signupForm">
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label style="color : white" for="inputEmail4">Email</label>
                            <input required style="color : white;border-color : white" type="email" class="form-control" name="email" id="inputEmail4" placeholder="Email">
                        </div>
                        <div class="form-group col-md-6">
                            <label style="color : white" for="inputEmail4">Usename</label>
                            <input required style="color : white;border-color : white" type="text" class="form-control" name="username" id="inputEmail4" placeholder="Username">
                        </div>
                        <div class="form-group col-md-6">
                            <label style="color : white" for="inputPassword4">Password</label>
                            <input required style="color : white;border-color : white" type="password" class="form-control" name="password" id="inputPassword4" placeholder="Password">
                        </div>
                        <div class="form-group col-md-6">
                            <label style="color : white" for="inputPassword4">Confirm Password</label>
                            <input required style="color : white;border-color : white" type="password" class="form-control" name="confirmPassword" id="inputPassword4" placeholder="Confimr Password">
                        </div>
                         <div class="form-group col-md-6">
                            <label style="color : white" for="inputEmail4">Phone</label>
                            <input required style="color : white;border-color : white" type="number" class="form-control" name="mobile" id="inputEmail4" placeholder="Phone">
                        </div>
                        <div class="form-group col-md-6">
                            <label style="color : white" for="inputEmail4">Type</label>
                            <select required name="userType" style="width : 100%;height : 60%">
                                <option value="society">Society</option>
                                <option value="user">User</option>
                            </select>    
                        </div>
						<div class="form-group col-md-12">
                            <label style="color : white" for="inputEmail4">College</label>
                            <input required style="color : white;border-color : white" type="text" class="form-control" name="collegeName" id="inputEmail4" placeholder="Collge Name">
                        </div>
                    </div>
                    <button style="margin-bottom : 3%;" type="submit" class="btn btn-primary">Sign in</button> <br>
                        <a style="color : white" class="haveAccount">Already Have Account?</a>
                </form>
                  <form action="/login" method="POST" id="loginForm"  style="display : none">
                    <div class="form-row">
                        <div class="form-group col-md-12">
                            <label style="color : white" for="inputEmail4">Usename</label>
                            <input required style="color : white;border-color : white" type="text" class="form-control" name="username" id="inputEmail4" placeholder="Username">
                        </div>
                        <div class="form-group col-md-12">
                            <label style="color : white" for="inputPassword4">Password</label>
                            <input required style="color : white;border-color : white" type="password" class="form-control" name="password" id="inputPassword4" placeholder="Password">
                        </div>
                    </div>
                    <button style="margin-bottom : 3%;" type="submit" class="btn btn-primary">Sign in</button> <br>
                        <a style="color : white" class="haveAccount">Create An Account?</a>
                </form>
			</div>
		</div>
	</div>
</section>
<!-- CTA  End -->

